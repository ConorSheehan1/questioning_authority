<div>
  <%= form_tag request.path, method: :get, class: "form-search" do %>
    <label class="sr-only" for="authority_search">Lookup term:</label>
    <%= text_field_tag :uq, params[:uq], class: "q", placeholder: "Lookup term in authorities", size: '30', type: "search", id: "term_lookup" %>
    <%= hidden_field_tag :sort, params[:sort], id: 'context_sort' %>
    <%#= render_hash_as_hidden_fields(search_state.params_for_search.except(:uq, :sort, :qt, :page, :utf8)) %>
    <button type="submit" class="btn btn-primary" id="authority_submit">
      <i class="glyphicon glyphicon-search"></i> Go
    </button>
  <% end %>
</div>
